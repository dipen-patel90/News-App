<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.NewsHeadlinesFragment">

    <data>

        <variable
            name="newsHeadline"
            type="com.ct.model.vo.UINewsHeadline" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/description_content_padding">

        <ImageView
            android:id="@+id/news_iv"
            android:layout_width="@dimen/description_image_size"
            android:layout_height="@dimen/description_image_size"
            app:imageUrl="@{newsHeadline.imageUrl}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:background="@drawable/ic_launcher_foreground" />

        <TextView
            android:id="@+id/news_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{newsHeadline.title}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/news_iv"
            tools:text="@string/lorem_ipsum_title" />

        <TextView
            android:id="@+id/news_description_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{newsHeadline.description}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/news_title_tv"
            tools:text="@string/lorem_ipsum_title" />

        <TextView
            android:id="@+id/news_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{newsHeadline.content}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/news_description_tv"
            tools:text="@string/lorem_ipsum_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
